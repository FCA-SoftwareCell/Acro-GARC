@model AcroGARC.ViewModels.SubjectAllocationViewModel
@{
    ViewBag.Title = "SubjectForm";
}

<h2>Subject Allocation</h2>
@using (Html.BeginForm("Add", "Subject"))
{
    @Html.HiddenFor(m => m.ClassStructureId)
    <div class="form-group">
        @Html.LabelFor(m => m.Faculties)
        @Html.DropDownListFor(m => m.FacultyId, new SelectList(Model.Faculties, "Id", "FirstName"), "Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Faculties)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Subjects)
        @Html.DropDownListFor(m => m.SubjectId, new SelectList(Model.Subjects, "Id", "Name"), "Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Subjects)
    </div>

    <button type="submit" name="btnSave" class="btn btn-primary">Save</button>
}