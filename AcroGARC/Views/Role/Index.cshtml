@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>
@Html.ActionLink("Create Role", "Create", "Role", null, new { @class = "btn btn-link" })|
@Html.ActionLink("Manage User Role","ManageUserRoles",null,new { @class="btn btn-link"})
<table class="table table-hover">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
            {
            <tr>
                <td>@role.Name</td>
                
                <td>
                    @Html.ActionLink("Edit", "Edit", "Role",
                        new { Id = role.Id }, new { @class = "btn btn-link" })|
                    @Html.ActionLink("Delete","Delete","Role",new { id =role.Id},new { @class="btn btn-link"})
                </td>
            </tr>
        }
    </tbody>

</table>




